<%= form_tag "/", method:'GET' do %>
<table class="table table-striped">

  </div>

	<thead>
		<tr>
			<th>Complete</th>
			<th>Priority</th>
			<th>To Do</th>
			<th>Description</th>
			<th>Time Estimate</th>
			<th>Deadline</th>
			<th>Actions</th>
		</tr>
	</thead>
	<body>
		<% @todo.each do |todo| %>	

		<tr>
			<td><%= check_box_tag "todos_ids[]", todo.id %></td>
			<td><%= todo.Priority %></td>
			<td><%= todo.Action %></td>
			<td><%= todo.Description %></td>
			<td><%= todo.Time_Estimate.strftime("%H:%M") unless todo.Time_Estimate.blank? %></td>
			<td><%= todo.Deadline.strftime("%B %e, %Y") unless todo.Deadline.blank?%></td>
			<td><%= link_to 'Edit', edit_todo_path(todo), :class => 'btn btn-mini btn-info' %> 
			<%= link_to 'Delete', todo_path(todo), 
				method: :delete, 
				data: {confirm: 'Are you sure?'}, :class => 'btn btn-mini btn-danger' %></td>
			<p1><%= Todo.where(Complete: nil).sum(:Time_Estimate) %></p1>	
		<%end%>
		</tr>
		
	</body>
	
		<% end %>
	

	<nav class="navbar navbar-inverse navbar-fixed-bottom">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

    </div>


      <ul class="nav navbar-nav navbar-right">
      	<li><%= link_to 'Add new To Do', new_todo_path, 
			:class => 'btn btn-mini btn-success' %></li>
		<li><%= submit_tag("Remove Completed Tasks") %></li>

      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
